<Window x:Class="festiflo_logistics_controller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
        xmlns:local="clr-namespace:festiflo_logistics_controller"
        mc:Ignorable="d"
        Title="FestiFlo MS" Height="650" Width="900" Background="#fd78adff" Foreground="#4551c7ff " BorderBrush="#ffe552ff">
  <Window.Resources>
    <local:MapViewModel x:Key="MapViewModel" />
  </Window.Resources>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition/>
      <RowDefinition Height="Auto"/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="400"/>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition/>
      </Grid.ColumnDefinitions>
      <Grid Grid.Column="0">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" FontFamily="Tahoma" FontSize="24">
          <Label.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="1" Color="White"/>
          </Label.Effect>
          <Label.Content>FestiFlo</Label.Content>
        </Label>
        <!-- -->
        <Border Grid.Row="1" Margin="6, 3, 6, 3" Width="Auto" Height="Auto">
          <StackPanel Orientation="Vertical" Height="Auto">
            <TextBlock Text="Event Title" Width="Auto" Foreground="Black" HorizontalAlignment="Left"/>
            <TextBox x:Name="TitleField" MinWidth="100" MaxWidth="200" HorizontalAlignment="Left"/>
            
            <TextBlock Margin="0,6,0,0" Text="Event Description" Foreground="Black" 
                       Height="Auto"  MaxWidth="100" HorizontalAlignment="Left"/>
            <TextBox x:Name="DescField" MinHeight="200" Height="Auto" TextWrapping="Wrap"/>
            
            <StackPanel Orientation="Horizontal" Margin="0, 3,0,0">
              <Button x:Name="LocationButton" Width="120" Height="25"
                      Content="Set Location"  Margin="6,0,0,0"/>
              <Button x:Name="SendEventButton" Width="120" Height="25"
                      Content="Send Event" />
            </StackPanel>
          </StackPanel>
        </Border>
        <!-- -->
        <Border Grid.Row="2" Width="Auto" Height="Auto" MinHeight="40"/>
        <Button Grid.Row="3"
              Content="Load data"
              Width="120" Height="25"
              Command="{Binding LoadFullMapCommand, Source={StaticResource MapViewModel}}"/>
        <Button Grid.Row="4"
              Content="Refresh heat map"
              Width="120" Height="25"
              Command="{Binding ReloadHeatMapCommand, Source={StaticResource MapViewModel}}"/>
        <!--<TextBlock Grid.Row="2" Text="{Binding GeometryString, Source={StaticResource MapViewModel}}" TextWrapping="Wrap"/>-->
      </Grid>
      <GridSplitter Grid.Column="1"
              HorizontalAlignment="Center"
              VerticalAlignment="Stretch"
              Background="Gray" 
              ShowsPreview="True"
              Width="5" />
      <esri:MapView x:Name="EsriMapView" 
                    Grid.Column="2" Map="{Binding Map, Source={StaticResource MapViewModel}}" />

    </Grid>
    <GridSplitter Grid.Row="2"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Center"
              Background="Gray" 
              ShowsPreview="True"
              Height="5"/>
    <Border Grid.Row="3" BorderBrush="#FF000000" BorderThickness="3" CornerRadius="8,8,8,8">
      <DataGrid ItemsSource="{Binding StafflocationsViewModel.Locations, Source={StaticResource MapViewModel}}">
        <DataGrid.Columns>
        </DataGrid.Columns>
      </DataGrid>
    </Border>

  </Grid>
</Window>
